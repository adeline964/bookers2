<div class="col-md-3">
  <h2>User info</h2>
  <%=image_tag user.get_profile_image %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%=user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%=user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <% if user.id == current_user.id %>
      <%=link_to "User Page",edit_user_path(current_user.id) %>
    <% else %>
      <%=link_to "User Page",user_path(current_user.id) %>
    <% end %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%=form_with model:book do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%=f.text_field :title %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%=f.text_area :body %>
    </div>
    <div class="form-group">
      <%=f.submit "Create Book" %>
    </div>
  <% end %>
</div>